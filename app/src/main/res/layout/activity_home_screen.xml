<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2EB8E6" tools:context=".HomeScreenActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="(Student)Choose Subject"
        android:background="#C6C6C6"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:text="(Tutor)Choose Subject"
        android:background="#C6C6C6"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:text="Begin Session"
        android:background="#C6C6C6"
        android:padding="10dp"
        android:onClick="toSession"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:layout_below="@+id/button3"
        android:id="@+id/latitude"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:layout_below="@+id/latitude"
        android:id="@+id/longitude"/>

    <Button
        android:layout_width="wrap_content"
        android:text="Find Courses"
        android:onClick="findCourses"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_below="@id/longitude" />

    <Button
        android:layout_width="wrap_content"
        android:text="Login"
        android:onClick="login"
        android:layout_height="wrap_content"
        android:id="@+id/toLoginActivity"
        android:layout_below="@id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:text="Register"
        android:onClick="register"
        android:layout_height="wrap_content"
        android:id="@+id/toRegisterActivity"
        android:layout_below="@id/toLoginActivity" />

    <Button
        android:layout_width="wrap_content"
        android:text=""
        android:onClick="handleLogin"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:layout_below="@id/toRegisterActivity" />

</RelativeLayout>
